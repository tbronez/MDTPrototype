<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_clipboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:onClick="backToMenu"
    tools:context="com.example.tessa.mdtprototype.ClipboardActivity">

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@android:drawable/arrow_down_float"
        android:id="@+id/flip_down"
        android:onClick="onButtonDown"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/flip_up" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@android:drawable/arrow_up_float"
        android:id="@+id/flip_up"
        android:onClick="onButtonUp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />



    <ViewFlipper
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/viewFlipper"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true">

    </ViewFlipper>


</RelativeLayout>
